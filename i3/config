## logout, suspend, reboot, shutdown bar
# mode script for exit   
set $mode_system (l) logout, (s) suspend, (h) hibernate, (r) reboot, (u) shutdown
mode "$mode_system" {
   bindsym s exec --no-startup-id sudo pm-suspend, mode "default"
   bindsym h exec --no-startup-id sudo pm-hibernate, mode "default"
   bindsym r exec --no-startup-id sudo shutdown -r now, mode "default"
   bindsym u exec --no-startup-id sudo shutdown -h -P now, mode "default"  
   bindsym l exec --no-startup-id i3-msg exit, mode "default"

   #bindsym s exec --no-startup-id ~/.i3/i3exit shutdown, mode "default"
   #bindsym h exec --no-startup-id ~/.i3/i3exit hibernate, mode "default"
   #bindsym r exec --no-startup-id ~/.i3/i3exit reboot, mode "default"
   #bindsym u exec --no-startup-id ~/.i3/i3exit poweroff, mode "default"  
   #bindsym l exec --no-startup-id i3-msg exit, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+P mode "$mode_system"



